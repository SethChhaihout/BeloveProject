<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:gravity="right">
        <RelativeLayout
            android:id="@+id/lytBlockUser"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray"
            android:padding="5dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imv_block_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_block_user"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_below="@+id/imv_block_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block user"
                android:textSize="8dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lytSwipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:background="@android:color/white"
        android:visibility="visible">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher_background"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_chat_active"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@+id/imgProfile"
                android:layout_alignStart="@+id/imgProfile"
                android:layout_marginTop="-20dp"
                android:src="@drawable/img_circle_online"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size15"
                    android:text="Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvLastMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size12"
                    android:text="last message"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imv_star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/img_star"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
