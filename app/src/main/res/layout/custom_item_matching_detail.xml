<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/txtTitle_in_matching_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About me"
        android:textSize="18sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/txtDes_in_matching_detail"
        android:layout_below="@id/txtTitle_in_matching_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User information about him or her. User information about him or her."/>
</RelativeLayout>