<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:background="@drawable/border_radius_medium">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/size15"
            android:text="Block User"/>
        <TextView
            android:id="@+id/tv_msg_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:textSize="@dimen/size15"
            android:layout_marginTop="20dp"
            android:text="Do you want to block Thomas?"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_msg_desc"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_msg_desc"
                android:textSize="@dimen/size15"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:text="No"/>
            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_msg_desc"
                android:layout_toRightOf="@+id/tv_no"
                android:textSize="@dimen/size15"
                android:textStyle="bold"
                android:text="Yes"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
